@model AMST4.Carousel.MVC.Models.Category

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Detalhes da Categoria</h2>
    <div class="card mb-3 shadow-sm">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/@Model.ImageUrl" alt="@Model.Description" class="img-fluid rounded-start">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Description</h3>
                    <p class="card-text">
                        <small class="text-muted">Criado em: @Model.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </p>
                    <p class="card-text">
                        Status: @(Model.IsActive ? "Ativa" : "Inativa")
                    </p>
                    <div class="text-center mt-4">
                        <a asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg">Editar Categoria</a>
                        <a asp-action="CategoryList" class="btn btn-outline-secondary btn-lg">Voltar para Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
