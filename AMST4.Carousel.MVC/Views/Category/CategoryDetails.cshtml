@model AMST4.Carousel.MVC.Models.Category

@{
    ViewData["Title"] = "CategoryDetails";
}

<h1>Detalhes da Categoria</h1>

<div class="container mt-4">
    <h4>Produto</h4>
    <hr />
    <dl class="row">
       

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-9">
            <img src="~/@Model.ImageUrl" alt="Imagem Da Categoria" class="img-fluid" />
        </dd>

        
    </dl>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="EditCategory" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="CategoryList">Voltar para a Lista</a>
</div>
 