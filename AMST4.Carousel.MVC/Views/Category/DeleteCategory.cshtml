@model Category

@{
    ViewData["Title"] = "Deletar emprestimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Deletar Emprestimo</h1>
    </div>

    <form method="post" asp-controller="Category" asp-action="DeleteCategory">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-danger text-center">Tem Certeza Que Deseja Excluir essa Category ?</h2>
        <div class="mb-3">
            <label for="Description" class="form-label text-light">Description</label>
            <input type="text" class="form-control" id="Description" placeholder="Description" asp-for="Description" disabled>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label for="IsActive" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" id="IsActive" placeholder="IsActive" asp-for="IsActive" disabled>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label text-light" for="Livro">ImageUrl</label>
            <input type="text" class="form-control" id="ImageUrl" placeholder="ImageUrl" asp-for="ImageUrl" disabled>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Deletar</button>
            <a class="btn btn-primary w-50" asp-controller="Category" asp-action="CategoryList">Voltar</a>
        </div>
    </form>
</div>
