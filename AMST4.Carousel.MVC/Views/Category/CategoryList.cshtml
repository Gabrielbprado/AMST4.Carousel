@model IEnumerable<AMST4.Carousel.MVC.Models.Category>

@{
    ViewData["Title"] = "CategoryList";
}

<h1>Categorias Cadastradas</h1>

<p>
    <a asp-action="AddCategory" class="btn btn-success">Criar Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-controller="Product" asp-action="ProductListByCategory" asp-route-categoryId="@item.Id" class="btn btn-primary">Ver Produtos</a>
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id">Editar</a> |
                    <a asp-controller="Category" asp-action="CategoryDetails" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
