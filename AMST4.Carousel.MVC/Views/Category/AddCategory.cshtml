@model AMST4.Carousel.MVC.Models.Category

@{
    ViewData["Title"] = "Adicionar Categoria";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Adicionar Nova Categoria</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddCategory" enctype="multipart/form-data" class="card p-4 shadow-sm" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição da Categoria</label>
                    <input asp-for="Description" class="form-control" placeholder="Insira a descrição da categoria" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Imagem da Categoria</label>
                    <input type="file" asp-for="ImageUrl" class="form-control-file" required />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActiveCheck" />
                    <label class="form-check-label" for="IsActiveCheck">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Criar Categoria</button>
                    <a asp-action="CategoryList" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
