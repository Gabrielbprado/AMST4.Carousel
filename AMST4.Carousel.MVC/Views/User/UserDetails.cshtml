@model AMST4.Carousel.MVC.Models.User

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Detalhes do Usuário</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" class="rounded-circle" alt="Foto do usuário" style="width: 150px; height: 150px;">
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            <p class="form-control-plaintext">@Model.UserName</p>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Endereço</label>
                        <div class="col-sm-10">
                            <p class="form-control-plaintext">@Model.Adress</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Cidade</label>
                        <div class="col-sm-10">
                            <p class="form-control-plaintext">@Model.City</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">CEP</label>
                        <div class="col-sm-10">
                            <p class="form-control-plaintext">@Model.ZipCode</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
