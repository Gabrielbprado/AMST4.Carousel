@model AMST4.Carousel.MVC.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Produto</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditProduct" enctype="multipart/form-data" class="card p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome do Produto</label>
                    <input asp-for="Name" class="form-control" placeholder="Insira o nome do produto" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descreva o produto" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Imagem Atual</label>
                    <div class="mb-3">
                        <img src="~/@Model.ImageUrl" alt="Imagem do Produto" class="img-thumbnail" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Nova Imagem do Produto</label>
                    <input type="file" asp-for="ImageUrl" class="form-control-file" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActiveCheck" />
                    <label class="form-check-label" for="IsActiveCheck">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Preço</label>
                    <input type="number" asp-for="Price" class="form-control" placeholder="Insira o novo preço" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Categoria</label>
                    <select asp-for="Category_Id" class="form-control" asp-items="@ViewBag.CategoryList" required></select>
                    <span asp-validation-for="Category_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Tamanho</label>
                    <select asp-for="Size_Id" class="form-control" asp-items="@ViewBag.SizeList" required></select>
                    <span asp-validation-for="Size_Id" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Atualizar Produto</button>
                    <a asp-action="ProductList" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
