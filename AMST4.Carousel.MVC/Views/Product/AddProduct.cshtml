@model AMST4.Carousel.MVC.Models.Product

@{
    ViewData["Title"] = "AddProduct";
}

<h1>Adicionar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Preço</label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Estoque</label>
                <input type="number" asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Imagem do Produto</label>
                <input type="file" name="image" class="form-control" /> 
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            
            @if (!(bool)ViewBag.HasCategories)
            {
                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Não é Possível Registrar o Produto sem Uma Categoria</label>
                </div>
                <br>
                <div class="form-group">
                    <a asp-controller="Category" asp-action="AddCategory" class="btn btn-success">Adicionar Categoria</a>
                </div>
            }
            else if (!(bool)ViewBag.HasSizes)
            {

                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Não é Possível Registrar o Produto sem Um Tamanho</label>
                </div>
                <br>
                <div class="form-group">
                    <a asp-controller="Size" asp-action="AddSize" class="btn btn-success">Adicionar Tamanho</a>
                </div>

            }
            else
            {

                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Categoria</label>
                    <select asp-for="Category_Id" class="form-control" asp-items="@ViewBag.CategoryList"></select>
                    <span asp-validation-for="Category_Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Size_Id" class="control-label">Tamanho</label>
                    <select asp-for="Size_Id" class="form-control" asp-items="@ViewBag.SizeList"></select>
                    <span asp-validation-for="Size_Id" class="text-danger"></span>
                </div>

                <br>
                <button type="submit" class="btn btn-primary">Criar</button>
            }
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="ProductList" class="btn btn-danger">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
