@model AMST4.Carousel.MVC.Models.Product

@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1 class="text-center my-4">Adicionar Novo Produto</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" asp-action="AddProduct" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome do Produto</label>
                    <input asp-for="Name" class="form-control" placeholder="Digite o nome do tênis" required />
                    <div class="invalid-feedback">Por favor, insira o nome do produto.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descreva o produto" required></textarea>
                    <div class="invalid-feedback">Por favor, insira uma descrição para o produto.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Preço (R$)</label>
                    <input type="number" asp-for="Price" class="form-control" placeholder="0,00" min="0" step="0.01" required />
                    <div class="invalid-feedback">Por favor, insira o preço do produto.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label">Quantidade em Estoque</label>
                    <input type="number" asp-for="Stock" class="form-control" min="0" required />
                    <div class="invalid-feedback">Por favor, insira a quantidade em estoque.</div>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Imagem do Produto</label>
                    <input type="file" asp-for="ImageUrl" class="form-control-file" />
                </div>

                <div class="form-group">
                    <label asp-for="Category_Id" class="control-label">Categoria</label>
                    <select asp-for="Category_Id" class="form-control" asp-items="@ViewBag.CategoryList" required></select>
                    <div class="invalid-feedback">Por favor, selecione uma categoria.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Size_Id" class="control-label">Tamanho</label>
                    <select asp-for="Size_Id" class="form-control" asp-items="@ViewBag.SizeList" required></select>
                    <div class="invalid-feedback">Por favor, selecione um tamanho.</div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg">Salvar Produto</button>
                    <a asp-action="ProductList" class="btn btn-outline-danger btn-lg">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
