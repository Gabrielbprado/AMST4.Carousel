@model IEnumerable<AMST4.Carousel.MVC.Models.Size>

@{
    ViewData["Title"] = "Tamanhos Disponíveis";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Tamanhos Cadastrados</h2>
    <div class="text-right mb-3">
        <a asp-action="AddSize" class="btn btn-outline-success btn-lg">+ Adicionar Tamanho</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Description)</h5>
                        <div class="text-center">
                            <a asp-controller="Product" asp-action="ProductListBySize" asp-route-sizeId="@item.Id" class="btn btn-primary">Ver Produtos</a>
                            <a asp-action="EditSize" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="SizeDetails" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detalhes</a>
                            <a asp-action="DeleteSize" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Deletar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
