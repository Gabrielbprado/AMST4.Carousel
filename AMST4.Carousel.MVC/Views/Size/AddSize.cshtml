@model AMST4.Carousel.MVC.Models.Size

@{
    ViewData["Title"] = "Adicionar Tamanho";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Adicionar Novo Tamanho</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddSize" class="card p-4 shadow-sm" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descrição do Tamanho</label>
                    <input asp-for="Description" class="form-control" placeholder="Insira a descrição do tamanho" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Criar Tamanho</button>
                    <a asp-action="SizeList" class="btn btn-outline-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
